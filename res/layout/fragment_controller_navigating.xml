<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|right"
    android:orientation="vertical"
    android:paddingTop="60dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/ll_image_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/camera_texture_view"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_reset_path"
                style="@style/FooterPagerButton"
                android:drawableLeft="@drawable/btn_mode_off"
                android:text="Reset Path"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_set_path"
                style="@style/FooterPagerButton"
                android:drawableLeft="@drawable/btn_mode_off"
                android:text="Configure Path"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_take_off"
                style="@style/FooterPagerButton"
                android:drawableLeft="@drawable/btn_mode_off"
                android:text="Take Off"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_start_navigating"
                style="@style/FooterPagerButton"
                android:drawableLeft="@drawable/btn_mode_off"
                android:text="Start Navigating"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>